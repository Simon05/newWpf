<Window x:Class="first_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:first_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="button" Content="Login" HorizontalAlignment="Left" Margin="229,219,0,0" VerticalAlignment="Top" Width="84" Click="button_Click" Height="29" FontFamily="Global Monospace" FontSize="20" Background="#FFD1F1CC"/>
        <TextBox x:Name="txt_username" HorizontalAlignment="Left" Height="29" Margin="207,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160"/>
        <Label x:Name="username" Content="Username" HorizontalAlignment="Left" Margin="86,78,0,0" VerticalAlignment="Top" FontFamily="Global Monospace" FontSize="22" FontWeight="Bold"/>
        <Label x:Name="password" Content="Password" HorizontalAlignment="Left" Margin="81,135,0,0" VerticalAlignment="Top" FontFamily="Global Monospace" FontSize="22" FontWeight="Bold"/>
        <PasswordBox x:Name="txt_password" HorizontalAlignment="Left" Margin="207,135,0,0" VerticalAlignment="Top" Width="160" Height="29"/>

    </Grid>
</Window>
